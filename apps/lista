#! /bin/bash

echo '<html>'
echo '<head>'
echo '<meta charset="utf-8">'
echo '<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">'
echo '<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">'
echo '<link rel="stylesheet" href="/cha/lista.css" />'
echo '<link href="https://fonts.googleapis.com/css?family=Amatic+SC:400,700" rel="stylesheet" type="text/css">'
echo '<script src="/cha/lista.js"></script>'
echo '</head>'
echo '<body>'
echo '<div id="titulo">'
echo '<img src="/cha/fita.png" class="phone" width="100%">'
echo '<img src="/cha/fita_larga.png" class="pc" width="100%">'
echo '<h3>LISTA DE PRESENTES</h3>'
echo '</div>'
echo '<div id="presentes">'
shuf "/usr/share/tiva/cha/presentes.txt" | while IFS=':' read descricao quantidade
do
	chosed=`cat /var/lib/cha/chosed.txt | grep "$descricao" | wc -l`
	if [ $chosed -lt $quantidade ]
	then
		echo '<div class="presente" onclick="selecionarPresente(this)">'
		echo "$descricao"
		echo '</div>'
	fi
done
echo '</div>'
echo '<div id="identificacao">'
echo '<a class="fa fa-times" id="cancelar"></a>'
echo '<p id="escolha"></p>'
echo '<button id="escolher_mais" onclick="escolherMais()" class="fa fa-plus"> Itens</button>'
echo '<label for="nome">Nome e Sobrenome:</label>'
echo '<input type="text" id="nome" onkeyup="validarNome()" required>'
echo '<label for="email">E-mail:</label>'
echo '<input type="text" id="email" onkeyup="validarEmail()" required>'
echo '<input type="checkbox" id="vou" checked="true">Irei, com mais <input id="acompanhantes" type="number" value="0" pattern="[0-9]"> pessoas.'
echo '<label for="recado">Deixe-nos um Recado:</label>'
echo '<textarea id="recado"></textarea>'
echo '<button id="finalizar" onclick="finalizar()">Finalizar</button>'
echo '</div>'
echo '<div id="obrigado">'
echo '<a class="fa fa-times" id="concluido" href="/cha/convite.html"></a>'
echo '<p id="mensagem"></p>'
echo '<div id="nomes">'
echo '<h2>ÂNGELO OTÁVIO</h2>'
echo '<h2>&</h2>'
echo '<h2>DANIELA</h2>'
echo '</div>'
echo '<div id="coracao">'
echo '<h1>{</h1>'
echo '<img src="https://cdnjs.cloudflare.com/ajax/libs/emojione/2.1.1/assets/png/1f49f.png">'
echo '<h1>}</h1>'
echo '</div>'
echo '</div>'
echo '<i class="fa fa-heart-o fa-4x" id="loading"></i>'
echo '</body>'
echo '</html>'
